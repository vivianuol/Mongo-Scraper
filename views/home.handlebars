<div class="placeholder"></div>

<nav class="navbar navbar-expand-lg navbar-dark bg-primary">
    <a class="navbar-brand" href="/">Mongo Scraper</a>
    <button class="navbar-toggler" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01"
        aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarColor01">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item active">
                <a id="Home" class="nav-link" href="/">Home
                    <span class="sr-only">(current)</span>
                </a>
            </li>
            <li class="nav-item">
                <a id="saved_articals" class="nav-link" href="/saved">Saved Articles</a>

            </li>
            <li class="nav-item">
                <a id="scrape_new" class="btn btn-danger scrape-new">SCRAPE NEW ARTICLES!</a>

            </li>
            <li id="clear" class="nav-item">
                <a class="btn btn-danger clear">CLEAR ARTICLES!</a>
            </li>
        </ul>
    </div>
</nav>

<div class="jumbotron text-center">
    <div class="overlay">
    </div>
    <div class="background-image">
    </div>
    <div class="caption">
        <h1>Mongo Scraper</h1>
        <p>New York Times Edition</p>
    </div>
</div>

<div id="article_cont" class="container-fluid article-container">
    <ul>

        {{#each articles}}

        <div class="card">
            <div class="card-header">
                <h3>
                    <a>{{headline}}</a>
                </h3>
            </div>
            <div class="card-body">
                <p>{{summary}}</p>
            </div>
        </div>
        {{/each}}
    </ul>

</div>

<footer class="footer">
    <div class="container">
        <p>New York Times Mongo Scraper</p>
    </div>
</footer>

